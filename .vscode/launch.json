    "version": "0.2.0",
    "configurations": [
        {
            "name": "Server Attach",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/Sistema/server.out",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Client",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Sistema/client.out",
            "args": [],
            "stopAtEntry": false,
            //"cwd": "${fileDirname}",
            "cwd": "${workspaceFolder}/Sistema",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Client"
        },
        {
            "name": "Server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Sistema/server.out",
            "args": [],
            "stopAtEntry": false,
            //"cwd": "${fileDirname}",
            "cwd": "${workspaceFolder}/Sistema",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description":  "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Server"
        }
    ],
    "compounds": [
        {
          "name": "Server/Client",
          "configurations": ["Server", "Client"],
        //   "preLaunchTask": "${defaultBuildTask}",
          "stopAll": true
        }
    ]
}